<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#aa000000"
    tools:context=".AddActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="55dp"
        android:background="@drawable/share_vp_back"
        android:orientation="horizontal"
        android:gravity="center_horizontal|center_vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/select_picture"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1.00"
            android:gravity="center_horizontal|center_vertical"
            android:background="@null"
            android:drawableTop="@drawable/ic_action_picture"
            android:text="烟苗移栽"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="100dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="3dp"
            android:background="#8c8c8c" />

        <Button
            android:id="@+id/take_photo"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@drawable/ic_action_camera"
            android:text="长势监测"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="100dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="3dp"
            android:background="#8c8c8c" />

        <Button
            android:id="@+id/publish_text"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@drawable/ic_action_email"
            android:text="灾害上报"
            android:textColor="#ffffff"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>